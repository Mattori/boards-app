<h2 class="ui header">
  <i class="folder open icon"></i>
  <div class="content">
    {{model.name}}
    <div class="sub header">{{model.description}}</div>
  </div>
</h2>
<h3 class="ui header">Développeurs</h3>
{{#link-to "dev-project.new" model.id class="ui button"}}
  <i class="ui plus icon"></i>
  Ajouter un développeur au projet...
{{/link-to}}
<div class="ui divider"></div>
<div class="table-responsive">
	<table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th class="col-xs-4">Identité</th>
        <th class="col-xs-4">Email</th>
        <th class="col-xs-4"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="col-xs-8">
          {{#power-select
            selected=model.owner.identity
            placeholder='Développeurs...'
            options=model.owner
            onchange=(action (mut model.owner.identity))
            as |listDevelopers|
          }}
            {{listDevelopers}}
          {{/power-select}}
        </td>
        <td class="col-xs-4">
          {{#bs-button class='btn btn-success btn-md'}}
            <i class="fa fa-plus"></i> Ajouter
          {{/bs-button}}
        </td>
      </tr>
      <tr>
        <td class="col-xs-4">
          {{model.owner.identity}}
        </td>
        <td class="col-xs-4">
          {{model.owner.email}}
        </td>
        <td class="col-xs-4">
        </td>
      </tr>
    </tbody>
  </table>
</div>
<h3 class="ui header">Stories</h3>
{{#link-to "story.new" model.id class="ui button"}}
  <i class="ui plus icon"></i>
  Ajouter une Story au projet...
{{/link-to}}
{{#link-to "projects" class="ui button"}}<i class="caret square left icon"></i>Retour aux projets{{/link-to}}
<div class="ui divider"></div>
<div class="ui middle aligned divided list">
  {{#each model.stories as |story|}}
  <div class="item">
    <div class="right floated content">
      <div class="ui left labeled button" tabindex="0">
        <a class="ui basic right pointing label">
          {{story.developer.identity}}
        </a>
        <div class="ui button">
          <i class="user icon"></i> Mettre à jour...
        </div>
      </div>
    </div>
    <i class="big file middle aligned icon"></i>
    <div class="content">
      <div class="header">
        {{story.code}}
      </div>
      <div class="description">
        {{story.description}}
        {{#each story.tags as |tag|}}
          <a class="ui {{tag.color}} label">{{tag.title}}</a>
        {{/each}}
      </div>
    </div>
  </div>
 {{/each}}
</div>
{{outlet}}
